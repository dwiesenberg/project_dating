
<nav class="light-blue accent-1">
  <div class="nav-wrapper">
    <a href="/user/<%= current_user.id %>" class="brand-logo left">Tender</a> 
    <ul id="nav-mobile" class="right hide-on-med-and-down" style="margin-left:1000px">
      <li><a href="/user/<%= current_user.id %>">DASHBOARD</a></li>
      <li><a href="/logout">LOG OUT</a></li>
    </ul>
  </div>
</nav>


  <div class="containerRegister container">
    <div class="row">
      <div class="input-field col s6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title" style="font-family:Lobster, cursive"><%= @user.first_name %>'s Profile</h3>
          </div>

          <div class="panel-body z-depth-5">
          <% if @count < 50 && current_user.id != @user.id %>
            <img src="/assets/question_mark.jpeg" alt="profile_pic" class="circle responsive-img profile_pic z-depth-3">
          <% else %>
          	<img src="<%= @user.avatar.url %>" alt="profile_pic" class="circle responsive-img profile_pic z-depth-3">
          <% end %>
              <fieldset>
              <div class="profile_body">
                <div class="form-group">
                  <p>
                    <b>First Name:</b> <%= @user.first_name %>
                  </p>
                </div>
                <div class="form-group">
                  <p>
                  <% if @count < 30 && current_user.id != @user.id  %>
                    <b>Last Name:</b>?????
                  <% else %>
                    <b>Last Name:</b> <%= @user.last_name %>
                  <% end %>
                  </p>
                </div>
                <div class="form-group">
                  <p>
                  <% if @count < 35 && current_user.id != @user.id %>
                    <b>Email:</b>?????
                  <% else %>
                    <b>Email:</b> <%= @user.email %>
                  <% end %>
                  </p>
                </div>
                <div class="form-group">
                  <p>
                    <% if @count < 10 && current_user.id != @user.id %>
                    <b>Height:</b>?????
                    <% else %>
                    <b>Height:</b> <%= @user.height %> in.
                    <% end %>
                  </p>
                </div>
                <div class="form-group">
                  <p>
                    <% if @count < 40 && current_user.id != @user.id %>
                    <b>Nationality:</b>?????
                    <% else %>
                    <b>Nationality:</b> <%= @user.nationality %>
                    <% end %>
                  </p>
                </div>
                <div class="form-group">
                  <p>
                    <% if @count < 15 && current_user.id != @user.id %>
                    <b>Gender:</b>?????
                    <% else %>
                   <b> Gender: </b> <%= @user.sex %>
                   <% end %>
                  </p>
                </div>
                <div class="form-group">
                  <p>
                    <% if @count < 45 && current_user.id != @user.id %>
                    <b>City:</b>?????
                    <% else %>
                    <b>City: </b> <%= @user.city %>
                    <% end %>
                   </p>
                </div>
                <div class="form-group">
                  <p>
                    <% if @count < 15 && current_user.id != @user.id %>
                    <b>State:</b>?????
                    <% else %>
                    <b> State: </b> <%= @user.state %>
                    <% end %>
                  </p>
                </div>
                <div class="form-group">
                  <p>
                    <% if @count < 20 && current_user.id != @user.id %>
                    <b>Birthday:</b>?????
                    <% else %>
                    <b> Birthday: </b> <%= @user.birthday %>
                    <% end %>
                  </p>
                </div>
              </fieldset>
            </div>
          </div>
          <% if @user.id == current_user.id %>
          <a class="waves-effect waves-light btn-large edit_profile" href="/users/<%=@user.id%>/edit">Edit Your Profile</a>
          <% end %>
      </div>
    </div>
  </div>



  <script type="text/javascript">
    $('select:not([multiple])').material_select();
  </script>

